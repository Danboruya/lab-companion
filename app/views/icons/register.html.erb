<div class="container-fluid pt-3" style="padding-top: 4rem">
  <div class="row">
    <div class="col s10 offset-s1">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title center">
            <h5>Register Face Icon</h5>
          </span>
          <div class="divider"></div>
          <%= form_for @icon, :url => "/icons/update", :html => {:multipart => true}, :method => :put do %>
            <label>Face Icon:</label><br />
            <div class="field">
              <%= file_field :file, :upload %>
            </div>
            <br />
            <div class="form-actions">
              <i class="btn waves-effect waves-input-wrapper" ><input class="waves-button-input" data-disable-with="Update" value="Update" type="submit" name="commit"></i>
            </div>
          <% end %>
          <br />
          <div class="card-action">
            <% if current_member.role.id == 1 %>
              <%= link_to "back to Members", members_path %>
            <% end %>
            <% if @member.id == current_member.id %>
              <%= link_to "edit email or password", edit_member_registration_path %>
            <% end %>
            <%= link_to "back", member_root_url %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>