<table class="responsive-table highlight centered dataTable no-footer">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Published</th>
      <th>Category</th>
      <th>Writer</th>
    </tr>
  </thead>

  <tbody>
    <% if @published_posts.length == 0%>
      <tr>
        <td colspan=2></td>
        <td>No data in table<td>
        <td colspan=2></td>
      </tr>
    <% else %>
      <% @published_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(markdown(post.content), length: 10 ) %></td>
          <td><%= post.published %></td>
          <td><%= post.category.name %></td>
          <td><%= post.member.name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
