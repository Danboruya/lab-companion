<% if @member.icon %>
  <% icon = @member.icon %>
  <% if icon.content_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
    <%= image_tag url_for({:action => 'icon', :id=> icon.id, :filename => icon.name}), :alt => icon.name %>
  <% else %>
    <%= image_tag 'default_face.png', :alt => 'No Photo' %>
  <% end %>
<% else %>
  <%= image_tag 'default_face.png', :alt => 'No Photo' %>
<% end %>