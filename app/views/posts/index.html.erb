<div class="container-fluid" style="padding-top: 2rem">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title center">Posts</span>
          <div class="divider"></div>
          <table class="responsive-table highlight centered dataTable no-footer">
            <thead>
              <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Published</th>
                <th>Category</th>
                <th>Writer</th>
                <% if current_member.role.id == 1 %>
                  <% if @posts.length != 0%>
                    <th colspan="3">Operation</th>
                  <% end %>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <% if @posts.length == 0%>
                <tr>
                  <td colspan=2></td>
                  <td>No data in table<td>
                  <td colspan=2></td>
                </tr>
              <% else %>
                <% @posts.each do |post| %>
                  <% if post.member.id == current_member.id || post.published == true %>
                    <tr>
                      <td><%= post.title %></td>
                      <td><%= truncate(markdown(post.content), length: 10 ) %></td>
                      <td><%= post.published %></td>
                      <td><%= post.category.name %></td>
                      <td><%= post.member.name %></td>
                      <td><%= link_to 'Show', post %></td>
                      <% if current_member.role.id == 1 %>
                        <td><%= link_to 'Edit', edit_post_path(post) %></td>
                        <% if current_member.id == post.member.id %>
                          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                      <% end %>
                    </tr>
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>