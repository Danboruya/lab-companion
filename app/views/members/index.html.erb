<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Specific</th>
      <th>Email</th>
      <th>Name</th>
      <th>Role</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.specific_id %></td>
        <td><%= member.email %></td>
        <td><%= member.name %></td>
        <td><%= member.role_id %></td>
        <td>
          <% if member.icon %>
            <% icon = member.icon %>
            <% if icon.content_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
              <%= image_tag url_for({:action => 'icon', :id=> icon.id, :filename => icon.name}), :alt => icon.name %>
            <% else %>
              <%= image_tag 'default_face.png', :alt => 'No Photo' %>
            <% end %>
          <% else %>
            <%= image_tag 'default_face.png', :alt => 'No Photo' %>
          <% end %> 
        </td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>

<% if member_signed_in? %>
  <%= link_to destroy_member_session_path, :method=>'delete' do %>Log out<% end %>
<% end %>