<%= form_with(model: member, local: true, multipart: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :specific_id %>
    <%= form.text_field :specific_id %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>

  <% if current_member.role_id == 1 %>
    <div class="field">
      <%= form.label :role_id %>
      <%= form.select :role_id, Role.all.collect{ |c| [c.name, c.id]} %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
