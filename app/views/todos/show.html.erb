<div class="container-fluid" style="padding-top: 2rem">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title center"><h3><%= @todo.title %></h3></span>
          <div class="divider"></div>
          <br />
          <p>
            <%= markdown(@todo.content) %>
          </p>
          <br />
          <div class="divider"></div>
          <p>
            <strong>Created:</strong>
            <%= @todo.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </p>
        </div>
        <div class="card-action">
          <% if @todo.member_id == current_member.id %>
            <%= link_to 'Edit', edit_todo_path(@todo) %>
          <% end %>
          <%= link_to 'Back', todos_path %>
        </div>
      </div>
    </div>
  </div>
</div>
