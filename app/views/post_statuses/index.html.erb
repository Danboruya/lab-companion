<p id="notice"><%= notice %></p>

<h1>Post Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_statuses.each do |post_status| %>
      <tr>
        <td><%= post_status.name %></td>
        <td><%= link_to 'Show', post_status %></td>
        <td><%= link_to 'Edit', edit_post_status_path(post_status) %></td>
        <td><%= link_to 'Destroy', post_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post Status', new_post_status_path %>
